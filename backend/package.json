{
  "name": "oasis",
  "version": "0.1.0",
  "main": "build/main.js",
  "homepage": "./",
  "author": {
    "name": "Developer Ryou",
    "email": "developerryou@gmail.com"
  },
  "description": "OASIS installer",
  "dependencies": {
    "appdata-path": "^1.0.0",
    "electron-updater": "^5.3.0",
    "module-alias": "^2.2.2",
    "nodemon": "^2.0.20"
  },
  "_moduleAliases": {
    "@ipc": "build/ipc"
  },
  "scripts": {
    "start": "npm run dev",
    "dev": "nodemon --watch electron/ --ext 'ts' --exec 'tsc && cross-env DEBUG=true electron .'",
    "build-mac": "electron-builder --mac",
    "build-win": "electron-builder --win --x64"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DeveloperRyou/oasis.git"
  },
  "build": {
    "extends": null,
    "appId": "com.oasis",
    "productName": "Oasis",
    "publish": {
      "provider": "github"
    },
    "files": [
      "react/**/*",
      "build/**/*"
    ],
    "mac": {
      "target": [
        "default"
      ],
      "icon": "./resources/installer/icon.png"
    },
    "dmg": {
      "title": "Oasis",
      "icon": "./resources/installer/icon.png"
    },
    "win": {
      "target": [
        "zip",
        "nsis"
      ],
      "icon": "./resources/installer/icon.png"
    },
    "directories": {
      "buildResources": "resources"
    }
  },
  "devDependencies": {
    "@types/module-alias": "^2.0.1",
    "cross-env": "^7.0.3",
    "electron": "^20.0.2",
    "electron-builder": "^23.6.0",
    "typescript": "^4.9.3"
  }
}
